{
    "name": "Anaconda (Python 3)",

    // Using Docker compose here as we want to bind mount the docker socket and binary to the container
    "dockerComposeFile": [
        "docker-compose.yml"
    ],

    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",

        "python.pythonPath": "/opt/conda/bin/python",

        "python.linting.pylintEnabled": false,
        "python.linting.enabled": false,
        "python.linting.mypyEnabled": false,
        "python.linting.pycodestyleEnabled": true,

        // Trust the Notebooks in this repo
        "jupyter.alwaysTrustNotebooks": true,
    },

    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
    ],

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "sudo /opt/conda/bin/conda install --name base seaborn matplotlib -y"
}